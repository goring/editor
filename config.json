{
  "$schema": "./schema.json",
  "keymaps": [
    {
      "key": {
        "Char": "q"
      },
      "command": "Quit",
      "modifiers": "CONTROL"
    },
    {
      "key": "Backspace",
      "command": "BackspaceChar",
      "modifiers": "NONE",
      "when": {
        "mode": "Insert"
      }
    },
    {
      "key": "Enter",
      "command": "InsertLine",
      "modifiers": "NONE",
      "when": {
        "mode": "Insert"
      }
    },
    {
      "key": "ArrowUp",
      "command": "MoveCursorUp",
      "modifiers": "NONE"
    },
    {
      "key": "ArrowDown",
      "command": "MoveCursorDown",
      "modifiers": "NONE"
    },
    {
      "key": "ArrowLeft",
      "command": "MoveCursorLeft",
      "modifiers": "NONE"
    },
    {
      "key": "ArrowRight",
      "command": "MoveCursorRight",
      "modifiers": "NONE"
    },
    {
      "key": "Escape",
      "command": {
        "Mode": "Normal"
      },
      "modifiers": "NONE",
      "when": {
        "mode": "Insert"
      }
    },
    {
      "key": {
        "Char": "i"
      },
      "command": {
        "Mode": "Insert"
      },
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": {
        "Char": "l"
      },
      "command": "MoveCursorRight",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": {
        "Char": "h"
      },
      "command": "MoveCursorLeft",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": {
        "Char": "j"
      },
      "command": "MoveCursorDown",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": {
        "Char": "k"
      },
      "command": "MoveCursorUp",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": {
        "Char": "x"
      },
      "command": "DeleteChar",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": "Enter",
      "command": "MoveCursorDown",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    },
    {
      "key": "Backspace",
      "command": "MoveCursorLeft",
      "modifiers": "NONE",
      "when": {
        "mode": "Normal"
      }
    }
  ]
}
